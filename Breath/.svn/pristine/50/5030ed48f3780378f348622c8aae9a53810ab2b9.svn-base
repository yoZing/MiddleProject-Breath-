	<!--  VIDEO 업로드 Modal end -->
	
	<!--VIDEO 업데이트 Modal start -->
	<div id="myModal1" class="modal fade" role="dialog">
		<div class="modal-dialog">

			<!-- Modal content -->
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<h3 class="modal-title">Update Video</h3>
				</div>
				<div class="modal-body">
					<form id="update-form" method="post" 
					enctype="multipart/form-data">
					<div class="form-group">
					<label for="contentNum">게시번호</label>
					<input class="form-control" type="text" name="contentNum" placeholder="수정할 게시번호를 입력하세요">
					</div>
					<label for="file">파일</label>
					<input type="file" name="atchId"><br>
					<label for="content">내용</label>
					<div class="form-group">
					<textarea class="form-control" rows="5" name="content">
					</textarea>
					</div>
					</form>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-info" value="수정하기" id="update-file">
					<button type="button" id="close2" class="btn btn-default" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>
	<!--  VIDEO 업데이트 Modal end -->

<script>
 // 페이지 로드할때 비디오 리스트 보여주는 함수 실행
 window.onload = function() {
	  let url = window.location.href;
	  getAllVideoList(url);
	};

// 비디오 리스트 보여주는 함수
function getAllVideoList(url){
	$.ajax({
		async: true,
		url : '/Breath/getAllVideoList.Video',
		type : 'get',
		data : {
			'url' : url
		},
		success : function(res) {
			$('#here').html(res);
		},
		error : function(xhr) {
			alert(xhr.status);
		},
		dataType : 'html'
		
	});
}
 
 // 업로드 버튼 눌렀을 때 모달창 띄우기
 $('#uploadbtn').on('click', function(){
	 $('#myModal').modal({backdrop : 'static'});
 });
 
 $('.modal').on('hidden.bs.modal', function (e) {
	    console.log('modal close');
	  $(this).find('form')[0].reset();
 });
 
 // 모달창에서 업로드 버튼 눌렀을 때 비디오 업로드
 $('#upload-file').on('click', function(){
	 var form = $('#upload-form')[0];
     var formData = new FormData(form);
	 
	 $.ajax({
		url : '/Breath/insert.Video',
		type : 'post',
		data : formData,
			success : function(res) {
			  $('#here').html(res);
			  $('#close').click();
			},
			error : function(xhr) {
				alert(xhr.status);
			},
			dataType : 'html',
			contentType : false,
	        processData : false,
	        cache: false
		});  
 });
 
 // 모달창 닫았을 때 폼 값 리셋
 $('.modal').on('hidden.bs.modal', function (e) {
	    console.log('modal close');
	  $(this).find('form')[0].reset();
 });
 
 // 수정버튼 눌렀을 때 모달창 띄우기
 function updatefile(number){
		$('#myModal1').modal({backdrop : 'static'});
		
		// 수정하기 버튼 눌렀을때 해당 비디오 파일 수정 
		$('#update-file').on('click', function(){
			var form = $('#update-form')[0];
	    	var formData = new FormData(form);
	    	
		 $.ajax({
			url : '/Breath/update.Video',
			type : 'post',
			data : formData,
				success : function(res) {
				  $('#here').html(res);
				  $('#close2').click();
				},
				error : function(xhr) {
					alert(xhr.status);
				},
				dataType : 'html',
				contentType : false,
		        processData : false,
		        cache: false
			}); 
		}); 
	}
 
 $('#back').on('click',function(){
	location.href="./adChloeMain.jsp"; 
 });
 
 function deletefile(number2) {
	 let dlNum = "delete"+ number2;
	 // console.log(dlNum);
	 $('#' + dlNum).on('click', function(){
	 let ok = confirm("정말 삭제하시겠습니까?(삭제한 파일은 복구되지 않습니다)"); 
	 if(ok){
		  $.ajax({
			url : '/Breath/delete.Video',
			type : 'post',
			data : { 'contentNum' : number2 },
				success : function(res) {
				  $('#here').html(res);
				},
				error : function(xhr) {
					alert(xhr.status);
				},
				dataType : 'html'
			}); 
	 }
  else{
		alert("취소했습니다.");
		location.reload();
  } 
	 });
 }
 
 </script> 
  	

